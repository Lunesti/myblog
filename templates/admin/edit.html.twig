{% extends 'base.html.twig' %}

{% block title 'Blog Ã©crivain'%}

{% block body %}

	{{ include('pages/_header.html.twig') }}
	<div class="form-group">
		<div class='row justify-content-center'>
			<div class="col-md-6 bg-light">
				<h1 class='py-5 text-center'>
					Editer un article

				</h1>
				<div class="container">
					{{ form_start(form, {'method': 'POST', 'attr': {'class': 'd-flex flex-column align-items-center'}}) }}
					{{ form_label(form.title) }}
					{{ form_widget(form.title, { 'attr': {'class': 'form-control w-50' }}) }}

					{{ form_label(form.content) }}
					{{ form_widget(form.content, { 'attr': {'class': 'form-control ' }}) }}

					<button class="btn btn-primary mt-4 w-25 my-4">Modifier</button>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}